---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Petition | Queens Park";
---

<BaseLayout title={title}>

	<div class="container">

        <div class="row">
            <div class="col">
			    <h1>Letter Template</h1>
                <p>We would add your name and address, then print and post this letter to the council office on your behalf.</p>
            </div>
        </div>

        <div class="row">
            <div class="col text-center">
                <iframe 
                    id="pdfviewer"
                    title="PDF"
                    src={'/pdfjs-2.14.305-dist/web/viewer.html?file=/queens_park_template.pdf'}
                    width = "100%"
                    height="100%"
                ></iframe>
            </div>
        </div>

		<br>

		<div class="row">
			<div class="col text-center">
				<a href="/queenspark" class="btn btn-secondary" role="button">
					Go Back
				</a>
			</div>
		</div>

    </div>

</BaseLayout>


<style scoped>

    iframe {
        height: 60vh;
    }
	
</style>
